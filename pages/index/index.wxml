<!--pages/index/index.wxml-->
<view class='container-index'>
  <view bindtap="viewTap" class='clickbg'> click me Change Text</view>
  <text>{{text}}</text>

  <text class='blockcell'>{{text}}</text>

  <view class='blockview'>
    <text class='blockcell'>打印{{text}}</text>
    <text class='blockcell'>{{text}}</text>
  </view>


  <view class='inlineblockview'>
    <text class='inlineblockcell'>{{inline_text}}</text>
    <text class='inlineblockcell'>{{inline_text}}</text>
  </view>

  <view class='inlineview'>
    <text class='inlinecell'>{{inline_text}}{{inline_text}}{{inline_text}}分割</text>
    <text class='inlinecell'>{{inline_text}}</text>
  </view>

  <view class='boxview'>
    <text class='boxcell' style="background:blue;height:80rpx;-webkit-box-flex:1;">box-flex:1</text>
    <text class='boxcell' style="background:red;-webkit-box-flex:2;">box-flex:2</text>
    <text class='boxcell' style="background:black;-webkit-box-flex:3;">This is box</text>
  </view>


  <view class='floatview'>
    <text class='floatcell'>{{float_text}}{{float_text}}1</text>
    <text class='floatcell' style='background:red;float:left'>{{float_text}}2</text>
    <text class='floatcell' style='background:black;;float:right'>{{float_text}}3</text>
  </view>

  <view class='pretend'>
    <text>ellowWorl</text>
    <image src="/image/nodata.png"></image>
    <image src="http://img1.3lian.com/2015/w7/85/d/101.jpg"></image>
  </view>
</view>