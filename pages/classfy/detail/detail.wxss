/* detail.wxss */
page{
    background-color: #fff;
    font-size: 14px;
}
.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0rpx;
}

.swiper_box {
    width: 100%;
    height: 320rpx;
}
.swiper_box .slide-image{
    width: 100%;
    height: 320rpx;
    display: inline-block;
    overflow: hidden;
}
.shopping_container{
    padding: 0 5rpx;
}
.shopping_container .title{
    margin: 20rpx 0;
    font-weight: bold;
    color: #333;
}

.shopping_container .reason{
    margin: 20rpx 0;
    color: #939393;
    line-height: 22px;
}