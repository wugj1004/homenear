<!--detail.wxml-->
<view class="container">
  <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{currentPage}}">
    <block wx:for="{{goodsPicsInfo}}">
      <swiper-item>
        <image src="{{item.picurl}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>

  <view class="shopping_container">
    <view class="title">{{shopppingDetails.title}}</view>
    <view class="reason">{{shopppingDetails.reason}}</view>
  </view>

</view>